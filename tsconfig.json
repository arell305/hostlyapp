{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      "@app/*": ["./app/*"],
      "@features/*": ["./features/*"],
      "@domains/*": ["./domains/*"],
      "@shared/*": ["./shared/*"],
      "@types/*": ["./shared/types/*"],
      "@lib/*": ["./shared/lib/*"],

      "@convex/*": ["./convex/*"],
      "convex/_generated/*": ["./convex/_generated/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "babel.config.js"
  ],
  "exclude": ["node_modules"]
}
